<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/treadmillButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:text="Treadmill Tool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trackButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Track Tool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/altButton" />

    <Button
        android:id="@+id/altButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Altitude Tool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/treadmillButton" />

    <Button
        android:id="@+id/trainingButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Training Tool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackButton" />

    <FrameLayout
        android:id="@+id/treadmillFL"
        android:name="com.example.runnerstoolfinal.treadmillFragment"
        android:layout_width="376dp"
        android:layout_height="392dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingButton"
        tools:layout="@layout/fragment_treadmill" />

    <FrameLayout
        android:id="@+id/trackFL"
        android:name="com.example.runnerstoolfinal.trackFragment"
        android:layout_width="376dp"
        android:layout_height="392dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingButton"
        tools:layout="@layout/fragment_track" />




</androidx.constraintlayout.widget.ConstraintLayout>